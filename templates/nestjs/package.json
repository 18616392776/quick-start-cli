{
  "name": "nestjs-starter",
  "version": "1.0.0",
  "description": "A webpack starter for Nestjs and Angular",
  "main": "server/server.js",
  "private": true,
  "scripts": {
    "start": "npm run dev:client & node -r ./config/ts-node.config.js server/main.ts",
    "dev:client": "cross-env NODE_ENV=development node config/dev-server.js",
    "dev:server": "nodemon --config config/nodemon.json",
    "build:client": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js --progress --profile --bail",
    "build:server": "tsc -p tsconfig-server.json",
    "build": "rimraf build &&  npm run build:server && npm run build:client",
    "production": "cross-env NODE_ENV=production pm2 start pm2.config.json"
  },
  "keywords": [
    "angular",
    "typescript",
    "ts",
    "webpack",
    "es6"
  ],
  "author": "tanbo",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@angular/router": "^8.0.0",
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/platform-express": "^6.1.1",
    "axios": "^0.19.0",
    "core-js": "^3.0.1",
    "normalize.css": "8.0.1",
    "rxjs": "^6.5.1",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^8.0.0",
    "@angularclass/hmr": "2.1.3",
    "@nestjs/testing": "^6.1.1",
    "@ngtools/webpack": "^8.0.2",
    "@types/express": "^4.16.0",
    "@types/jasmine": "3.3.13",
    "@types/node": "12.0.7",
    "angular-hot-reload-loader": "1.0.2",
    "angular2-template-loader": "0.6.2",
    "autoprefixer": "9.6.0",
    "awesome-typescript-loader": "5.2.1",
    "codelyzer": "~5.1.0",
    "connect-history-api-fallback": "1.6.0",
    "cross-env": "5.2.0",
